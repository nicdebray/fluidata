<div class="container-fluid">
  <div class="row">
    <div class="col-lg-12">
      <div class="top-navbar">
        <div class="col-xs-12 col-sm-8">
          <div class="left-top-navbar">
            <div class="">
              <div id="icon-company-profile"><%= image_tag ("icons/group.svg") %></div>
            </div>
            <div class="left-top-navbar-title">
              <h1>Company Details</h1>
            </div>
          </div>
        </div>
        <div class="col-xs-12 col-sm-4">
          <div class="right-top-navbar">
            <% if @companies.empty? %>
            <div id="right-top-navbar-create-btn">
              <%= link_to "Create", new_company_path, class: "button-green button right-top-navbar-btn" %>
            </div>
            <% else %>
            <div id="right-top-navbar-edit-btn">
              <%= link_to "Edit", edit_company_path(current_user), class: "button-blue button right-top-navbar-btn" %>
            </div>
            <div id="right-top-navbar-delete-btn">
              <%= link_to "Delete", user_path(current_user), method: :delete,
              data: {confirm: "Are you sure?"}, class: "button-red button right-top-navbar-btn" %>
            </div>
            <% end %>


          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row maincontentandnav">
    <div class="left-sidebar d-none d-md-block col-md-2 sidebar-expanded" id="left-sidebar-menu-toggle sidebar-container"> <%= render 'shared/sidebar' %>
    </div>

    <div class="right-maincontent col-xs-12 col-md-10">
      <div class = "" id="left-sidebar-toggle">
        <i class="fas fa-caret-left" id="left-sidebar-toggle-left-arrow"></i>
      </div>

      <div>
        <% if @companies.empty? %>
        <div class="">
          <p>There's no company to show.
            <%= link_to "Create a new one", new_company_path %></p>
          </div>
          <% else %>
          <% @companies.each do |company| %>
          <div class="card">
            <div class="company-card-title">
              My Company: <%= company.name %>
            </div>
            <div>Informations</div>
            <div><%= company.name %></div>
            <div><%= company.address %></div>
            <div><%= company.vat %></div>
            <div><%= cl_image_tag company.photo, height: 300, width: 400 %></div>
          </div>
          <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
