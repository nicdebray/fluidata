<div class="container-fluid">
  <div class="row">
    <div class="col-lg-12">
      <div class="top-navbar">
        <div class="col-xs-12 col-sm-8">
          <div class="left-top-navbar">
            <div class="">
              <div id="icon-company-profile"><%= image_tag ("icons/group.svg") %></div>
            </div>
            <div class="left-top-navbar-title">
              <h1>Company Details</h1>
            </div>
          </div>
        </div>
        <div class="col-xs-12 col-sm-4">
          <div class="right-top-navbar">
            <div id="right-top-navbar-edit-btn">
              <%= link_to "Edit", edit_company_path(current_user), class: "button-blue button" %>
            </div>
            <div id="right-top-navbar-delete-btn">
              <%= link_to "Delete", company_path, method: :delete,
              data: {confirm: "Are you sure?"}, class: "button-red button" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row maincontentandnav">
    <div class="left-sidebar d-none d-md-block col-md-2 sidebar-expanded" id="left-sidebar-menu-toggle sidebar-container"> <%= render 'shared/sidebar' %>
    </div>

    <div class="right-maincontent col-xs-12 col-md-10">
      <div class = "sticky-offset" id="left-sidebar-toggle">
        <%= image_tag("icons/sidebar-left-arrow.svg", id: "left-sidebar-toggle-left-arrow") %>
      </div>

      <div>
        <h1>My Company: <%= @company.name %> </h1>

        <p>Informations</p>
        <div><%= @company.name %></div>
        <div><%= @company.address %></div>
        <div><%= @company.vat %></div>
        <div><%= cl_image_tag @company.photo, height: 300, width: 400 %></div>
        <div><%= @company.photo %></div>
        <div>
          <%= link_to "Delete", company_path,
          method: :delete,
          data: { confirm: "Are you sure?"} %>
        </div>
        <div> <%= link_to "Edit", edit_company_path %></div></div>
      </div>
    </div>
  </div>

