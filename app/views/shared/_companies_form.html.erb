<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 offset-sm-3">
      <%= simple_form_for @company do |f| %>
      <%= f.input :name, label: "Company's name" %>
      <%= f.input :address, label: "Company's address" %>
      <%= f.input :vat, label: "VAT number" %>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
      <%= f.button :submit, class: "button-green button" %>
      <% end %>
    </div>
  </div>
</div>

