<% if  !user_signed_in? || current_user.try(:avatar).try(:url).nil?  %>
  <%= image_tag("avatar_placeholder.png", :class => "avatar", :id => "navbar-wagon-menu", :'data-toggle' => "dropdown") %>
  <% else %>
  <%= cl_image_tag current_user.avatar, :class => "avatar", :id => "navbar-wagon-menu", :'data-toggle' => "dropdown" %>
<% end %>
