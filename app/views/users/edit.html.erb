
<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12 col-sm-6 offset-sm-3">
      <h2>Modify your data</h2>

      <%= simple_form_for(current_user, url: user_path(@user)) do |f| %>
        <%= f.error_notification %>
        <div class="form-inputs">
          <%= f.input :email,
          required: true
          %>
          <%= f.input :first_name,
          required: true
          %>
          <%= f.input :last_name,
          required: true
          %>
          <%= f.input :department, collection: ["Management", "Finance", "IT", "Human Resources", "Production", "Marketing", "R&D", "Sales", "Purchase"]
        %>
          <%= f.input :admin,
          required: true
          %>
          <% if current_user.avatar.url.present? %> <%= image_tag(current_user.avatar.url, :class => "avatar") %> <%= f.label :remove_avatar do %> <%= f.check_box :remove_avatar %> <% end %> <% end %> <%= f.file_field :avatar %> <%= f.hidden_field :avatar_cache %>

        <%= f.input :password,
          hint: "leave it blank if you don't want to change it",
          required: false,
          input_html: { autocomplete: "new-password" } %>
          <%= f.input :password_confirmation,
          required: false,
          input_html: { autocomplete: "new-password" } %>
          <%= f.input :current_password,
          hint: "we need your current password to confirm your changes",
          required: true,
          input_html: { autocomplete: "current-password" } %>

        </div>

        <div class="form-actions">
          <%= f.button :submit, "Update" %>
        </div>
      <% end %>

      <h3>Cancel my account</h3>

      <p>Unhappy? <%= link_to "Cancel my account", user_path(current_user), data: { confirm: "Are you sure?" }, method: :delete %></p>

      <%= link_to "Back", :back %>
    </div>
  </div>
</div>

